        <include refid="table"/>
        (
            `id`,
            `title`,
            `name`,
            `icon`,
            `code`,
            `create_time`,
            `state`
        )
        VALUES(
            #{id},
            #{title},
            #{name},
            #{icon},
            #{code},
            #{createTime},
            #{state}
